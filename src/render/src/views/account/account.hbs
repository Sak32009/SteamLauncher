<div class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <form class="modal-content" action="" data-sk-channel="account-create">
      <div class="modal-header">
        <div class="modal-title">
          {{#if isEditMode}}
          <span class="mdi mdi-account-edit mdi-18px"></span>
          <span class="ml-1">Edit account</span>
          {{else}}
          <span class="mdi mdi-account-plus mdi-18px"></span>
          <span class="ml-1">Create account</span>
          {{/if}}
        </div>
        {{#if isEditMode}}
        <button type="button" class="btn-close" data-bs-dismiss="modal">
          <span class="mdi mdi-close"></span>
        </button>
        {{/if}}
      </div>
      <div class="modal-body">
        {{#unless isEditMode}}
        <div class="text-center">Before proceeding, please create your account!</div>
        {{/unless}}
        <div class="card">
          <div class="card-title">
            <span class="mdi mdi-badge-account mdi-18px"></span>
            <span class="ml-1">Name</span>
          </div>
          <div class="card-body">
            <input type="text" class="form-control" name="name" value="{{#if isEditMode}}{{data.name}}{{else}}Player#{{data.steamId}}{{/if}}" placeholder="example: Player" required />
          </div>
        </div>
        <div class="card">
          <div class="card-title">
            <span class="mdi mdi-translate mdi-18px"></span>
            <span class="ml-1">Language</span>
          </div>
          <div class="card-body">
            <select class="form-select" name="language" required>
              {{#each allowedLanguages}}
              {{#if (eq ../data.language @key)}}
              <option value="{{@key}}" selected>{{this}}</option>
              {{else}}
              <option value="{{@key}}">{{this}}</option>
              {{/if}}
              {{/each}}
            </select>
          </div>
        </div>
        <div class="card">
          <div class="card-title">
            <span class="mdi mdi-identifier mdi-18px"></span>
            <span class="ml-1">SteamID</span>
          </div>
          <div class="card-body">
            <input type="number" class="form-control" name="steamId" value="{{data.steamId}}" placeholder="example: 76596712918662909" required />
          </div>
        </div>
        <div class="card">
          <div class="card-title">
            <span class="mdi mdi-ip mdi-18px"></span>
            <span class="ml-1">Listen Port</span>
          </div>
          <div class="card-body">
            <input type="number" class="form-control" name="listenPort" value="{{#if isEditMode}}{{data.listenPort}}{{else}}47584{{/if}}" placeholder="example: 47584" required />
          </div>
        </div>
        <div class="card">
          <div class="card-title">
            <span class="mdi mdi-key mdi-18px"></span>
            <span class="ml-1">Steam WebAPI Key</span>
          </div>
          <div class="card-body">
            <input type="text" class="form-control !rounded-none" name="steamWebApiKey" placeholder="..." value="{{#if isEditMode}}{{data.steamWebApiKey}}{{/if}}" />
          </div>
          <div class="form-text text-center p-2">To get achievements, stats and items get WebApi Key from <a class="link" href="https://steamcommunity.com/dev/apikey" target="_blank">here</a>. If no WebAPI Key is given, it will only get games infos and dlcs.</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-block btn-green">Save</button>
      </div>
    </form>
  </div>
</div>
