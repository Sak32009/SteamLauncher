{
  "appId": "com.electron.steamlauncher",
  "copyright": "Copyright Â© 2022 Sak32009",
  "directories": {
    "buildResources": "./build/resources/",
    "output": "./build/release/${version}/"
  },
  "files": ["./src/*/dist/**/*", "./build/resources/icon.ico"],
  "extraResources": [
    {
      "from": "bin",
      "to": "bin"
    },
    {
      "from": "node_modules/regedit/vbs",
      "to": "bin/win/regedit/vbs"
    }
  ],
  "win": {
    "target": ["nsis", "zip"],
    "artifactName": "${name}-${version}-${os}-${arch}-portable.zip"
  },
  "nsis": {
    "oneClick": false,
    "license": "./LICENSE",
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": "always",
    "artifactName": "${name}-${version}-${os}-${arch}-installer.exe"
  }
}
